<%= @user.email %>
<%= @user.name %>

<% @user.pictures.each do |picture| %>
  <%= link_to image_tag(picture.image.url(:thumb), class: 'media-object'), picture_path(picture) %>
  <% if @user == @logged_user %>
    <%= link_to 'Remove', picture_path(picture), class: 'btn btn-danger', method: :delete, data: {confirm: 'Are you sure?'} %>
  <% end %>
  <br><br>
<% end %>

<br>
<hr>
<br>

<% if @user == @logged_user %>
  <%= link_to "New Picture", new_picture_path %>
<% end %>
